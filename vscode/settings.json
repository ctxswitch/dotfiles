{
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Iosevka','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.inlineHints.fontFamily": "'Iosevka','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "scm.inputFontFamily": "'Iosevka','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "debug.console.fontFamily": "'Iosevka','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.codeLensFontFamily": "'Iosevka','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 13,
    "editor.tabSize": 2,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "'Iosevka'",
    "ruby.format": "rubocop",
    "ruby.intellisense": "rubyLocate",
    "ruby.useBundler": true,
    // Basic settings: turn linter(s) on
    "ruby.lint": {
        "reek": false,
        "rubocop": true,
        "ruby": false, //Runs ruby -wc
        "fasterer": false,
        "debride": false,
        "ruby-lint": false
    },

    // Time (ms) to wait after keypress before running enabled linters. Ensures
    // linters are only run when typing has finished and not for every keypress
    "ruby.lintDebounceTime": 500,
    "window.zoomLevel": 1,
    "workbench.colorTheme": "GitHub Dark",
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "workbench.iconTheme": "kary-notebook-icons",
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    "vsicons.dontShowNewVersionMessage": true,
    "go.useLanguageServer": true,
    "go.formatTool": "goimports",
    "C_Cpp.updateChannel": "Insiders",
    "editor.suggestSelection": "first",
    "python.languageServer": "Pylance",
    "[rust]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.insertSpaces": false
    },
    "[go]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.insertSpaces": false
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "extensions.ignoreRecommendations": true,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "workbench.colorCustomizations": {
        "terminal.background":"#15181b",
        "terminal.foreground":"#ADADAD",
        "terminalCursor.background":"#ADADAD",
        "terminalCursor.foreground":"#ADADAD",
        "terminal.ansiBlack":"#15181b",
        "terminal.ansiBrightBlack":"#636363",
        "terminal.ansiRed":"#CF6A4C",
        "terminal.ansiBrightRed":"#F79274",
        "terminal.ansiGreen":"#99AD6A",
        "terminal.ansiBrightGreen":"#C1D592",
        "terminal.ansiYellow":"#D8AD4C",
        "terminal.ansiBrightYellow":"#FFD574",
        "terminal.ansiBlue":"#597BC5",
        "terminal.ansiBrightBlue":"#81A3ED",
        "terminal.ansiMagenta":"#A037B0",
        "terminal.ansiBrightMagenta":"#C85FD8",
        "terminal.ansiCyan":"#71B9F8",
        "terminal.ansiBrightCyan":"#99E1FF",
        "terminal.ansiWhite":"#ADADAD",
        "terminal.ansiBrightWhite":"#D5D5D5"
    },
    "workbench.preferredDarkColorTheme": "GitHub Dark",
    "workbench.preferredLightColorTheme": "GitHub Light",
    "go.toolsManagement.autoUpdate": true
}
